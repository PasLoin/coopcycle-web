{% extends "deliveries.html.twig" %}

{% block breadcrumb %}
  <li>
    <a href="{{ path('admin_integrations') }}">{{ 'integrations.breadcrumb'|trans }}</a>
  </li>
  <li>Woopit</li>
{% endblock %}

{% block content %}
<p class="text-right">
  <a href="{{ path('admin_new_integration_woopit') }}" class="btn btn-success">
    <i class="fa fa-plus"></i> {% trans %}basics.add{% endtrans %}
  </a>
</p>

<table class="table">
  <thead>
    <th>#</th>
    <th>{{ 'form.integration.name.label'|trans }}</th>
    <th>{{ 'form.integration.store.label'|trans }}</th>
  </thead>
  <tbody>
  {% for integration in integrations %}
    <tr>
      <td width="5%">
        <a href="{{ path('admin_integration_woopit', { id: integration.id }) }}">
          #{{ integration.id }}
        </a>
      </td>
      <td>
        {{ integration.name }}
      </td>
      <td>
        {{ integration.store.name }}
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
